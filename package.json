{
  "name": "STARTER",
  "version": "0.1.0",
  "scripts": {
    "dev": "run-p dev:*",
    "dev:parcel": "parcel src/client/index.html",
    "dev:graphql-codegen": "graphql-codegen --watch",
    "build": "run-s build:*",
    "build:client": "parcel build src/client/index.html --dist-dir dist/client --target client",
    "build:server": "parcel build src/server/index.ts --dist-dir dist/server --target server",
    "generate": "graphql-codegen",
    "start": "node dist/server",
    "lint": "run-p lint:*",
    "lint:eslint": "eslint 'src/**/*.{ts,tsx}'",
    "lint:tsc": "tsc"
  },
  "targets": {
    "client": {
      "context": "browser",
      "publicUrl": "/bundle",
      "engines": {
        "browsers": [
          "defaults"
        ]
      }
    },
    "server": {
      "context": "node",
      "publicUrl": "/bundle",
      "engines": {
        "node": ">= 12.6"
      }
    }
  },
  "dependencies": {
    "@apollo/react-hooks": "^3.1.4",
    "@apollo/react-ssr": "^3.1.4",
    "@types/node-fetch": "^2.5.5",
    "apollo-cache-inmemory": "^1.6.5",
    "apollo-client": "^2.6.8",
    "apollo-link-http": "^1.5.16",
    "cheerio": "^1.0.0-rc.3",
    "compression": "^1.7.4",
    "express": "^4.17.1",
    "graphql": "^15.0.0",
    "graphql-tag": "^2.10.3",
    "node-fetch": "^2.6.0",
    "react": "^16.13.1",
    "react-dom": "^16.13.1",
    "react-router-dom": "^5.1.2"
  },
  "devDependencies": {
    "@fullhuman/postcss-purgecss": "^2.1.2",
    "@graphql-codegen/cli": "^1.13.2",
    "@graphql-codegen/typescript": "^1.13.2",
    "@types/cheerio": "^0.22.17",
    "@types/compression": "^1.7.0",
    "@types/express": "^4.17.5",
    "@types/node": "^13.11.1",
    "@types/react": "^16.9.33",
    "@types/react-dom": "^16.9.6",
    "@types/react-router-dom": "^5.1.3",
    "@typescript-eslint/eslint-plugin": "^2.27.0",
    "@typescript-eslint/parser": "^2.27.0",
    "eslint": "^6.8.0",
    "eslint-config-prettier": "^6.10.1",
    "eslint-plugin-prettier": "^3.1.2",
    "eslint-plugin-react": "^7.19.0",
    "npm-run-all": "^4.1.5",
    "parcel": "^2.0.0-nightly.208",
    "prettier": "^2.0.4",
    "tailwindcss": "^1.2.0",
    "typescript": "^3.8.3"
  },
  "prettier": {
    "trailingComma": "es5"
  }
}
